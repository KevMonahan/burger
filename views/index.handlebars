<div class="container">

    <div class="row">

        <div class="col-lg-12">
            <h1 class="text-center">
                <strong>Burger Muncher</strong>
            </h1>
        </div>

    </div>


    <div class="row">

        <div class="col-lg-6">
            <h1 class="text-center">Munchable Burgers</h1>
            {{#each burger}} {{#unless devoured}}
            <button class="munch-burger" data-id="{{id}}">Munchatize it!</button>
            &nbsp;{{this.id}}) {{this.burger_name}}
            <br> {{/unless}} {{/each}}
            <div class="gif-display">
                {{!-- Empty div to display gif of devoured burger --}}
            </div>
        </div>

        <div class="col-lg-6 col-lg-offset-6">
            <h1 class="text-center">Munched Burgers</h1>
            <ul>
                {{#each burger}} {{#if devoured}} &nbsp;{{this.id}}) {{this.burger_name}}
                <br> {{/if}} {{/each}}
            </ul>
        </div>

    </div>


    <div class="row">

        <div class="col-lg-12 text-center">
            <br>
            <h1>Magical Burger Maker</h1>
            <form class="create-form">
                <div class="form-group">
                    <label for="new-burger">Burger Name:</label>&nbsp;
                    <input type="text" id="new-burger" burger_name="name">&nbsp;
                    <button class="btn" type="submit">Create Burger</button>
                </div>
            </form>
        </div>

    </div>